<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="姓名"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="15sp"
                android:focusable="false"
                android:text="张三" />
        </LinearLayout>

        <!-- 身份证号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="身份证号"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:inputType="number"
                android:textSize="15sp"
                android:focusable="false"
                android:text="330304********0369" />
        </LinearLayout>

        <!-- 手机号码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="手机号码"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:focusable="false"
                android:textSize="15sp"
                android:text="170***3813" />

        </LinearLayout>

        <!-- 确诊所在区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="确诊所在区域"
                />
            <EditText
                android:id="@+id/et_diagnosis_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="15sp"
                android:hint="请填写确诊所在区域" />
        </LinearLayout>

        <!-- 确诊医院 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="确诊医院"
                />
            <EditText
                android:id="@+id/et_diagnosis_hospital"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="15sp"
                android:hint="请填写确诊医院" />
        </LinearLayout>

        <!-- 确诊时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="确诊时间"
                />
            <EditText
                android:id="@+id/et_diagnosis_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:focusable="false"
                android:textSize="15sp"
                android:hint="请选择确诊时间" />
        </LinearLayout>

        <!-- 确诊证明文件 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="确诊证明文件"
                />
            <Button
                android:id="@+id/upload_pic_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/ic_upload_pic"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/report_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/text_white"
            android:background="@color/blue"
            android:text="确认上报" />

    </LinearLayout>

</ScrollView>